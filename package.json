{
  "name": "electron-devtools-installer",
  "version": "1.0.3",
  "description": "An easy way to install Dev Tools extensions into Electron applications",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint *.js test/*.js",
    "compile": "babel index.js --out-dir dist",
    "prepublish": "npm run compile",
    "test": "npm run lint && npm run test-unit",
    "test-unit": "electron-mocha ./test --recursive --compilers js:babel-core/register --timeout 10000 -R spec-xunit-file --renderer"
  },
  "keywords": [
    "electron",
    "dev",
    "tools"
  ],
  "author": "Samuel Attard",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-fs": "^0.1.0",
    "electron-mocha": "^2.2.0",
    "electron-prebuilt": "^1.2.1",
    "eslint": "^2.11.1",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.1",
    "spec-xunit-file": "0.0.1-3"
  },
  "dependencies": {
    "7zip": "0.0.6",
    "cross-unzip": "0.0.2",
    "follow-redirects": "^0.2.0",
    "rimraf": "^2.5.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
